extends layout


block content
 .container
  .row.justify-content-center
    h1.col-3.text-center Microblog
  .row.justify-content-center
    .card.col(style='width: 18rem;')
      .card-body 
        form(action='/register', method="POST").needs-validation
          .form-group.row
            label(for='Email').col-2.col-form-label Email address
            .col-10
              if errors.emailFormatError
                input(type='email', id='email', name='email').form-control.is-invalid
                .invalid-feedback Please provide a valid E-mail
              else
                input(type='email', id='email', name='email').form-control
          .form-group.row
            label(for='password').col-2.col-form-label Password
            .col-10
              if errors.passwordsMatchError || passwordLengthError
                input(type='password', id='password', name='password').form-control.is-invalid
                .invalid-feedback Please make sure the passwords match and they have the same lenght
              else 
                input(type='password', id='password', name='password').form-control
          .form-group.row
            label(for='password2').col-2.col-form-label Password
            .col-10
              if errors.passwordsMatchError || passwordLengthError
                input(type='password', id='password2', name='password2' required).form-control.is-invalid
                .invalid-feedback Please make sure the passwords match and they have the same lenght
              else
                input(type='password', id='password2', name='password2' required).form-control
          .form-group.row
            label(for='name').col-2.col-form-label Name
            .col-10
              if errors.nameAlpha || nameLength
                input(type='text', id='name', name='name').form-control.is-invalid
                .invalid-feedback The name is not Alphanumeric or is too long/short
              else 
                input(type='text', id='name', name='name').form-control

          .container
            .justify-content-center.row
              button(type='submit').btn.btn-primary.col-1 Register
    hr
  .row
  